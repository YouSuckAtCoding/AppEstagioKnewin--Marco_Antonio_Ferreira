@model UsuarioPresentationModel

@{
    ViewData["Title"] = "Details";
}

<div id="IndexTop" class="text-center">
<h1>Check out this person!</h1>
<a>Looks like a cool person!</a>
</div>

<div id="ContainerIndex" class="container">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
       
    </dl>
</div>
<div class="BtnContainer">
    <a class="btn btn-outline-dark text-decoration-none" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    <a class="btn btn-outline-primary text-decoration-none" asp-action="Index">Go to Users Page</a>
</div>
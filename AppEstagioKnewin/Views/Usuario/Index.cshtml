@model IEnumerable<UsuarioPresentationModel>
@{
    ViewData["Title"] = "Usuário";
}
<div id="IndexTop" class="text-center">
<h1>Check out all the users!</h1>
<a>Want to be on the list? Just click the button below.</a>
<br />
    <a asp-controller="Usuario" asp-action="Create" id="IndexCreateBtn" class="btn btn-outline-dark">Create New User</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    <a class="btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id" >Edit</a> |
                    <a class="btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.Id" >Details</a> |
                    <a class="btn-outline-danger btn-sm"asp-action="Delete" asp-route-id="@item.Id" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
